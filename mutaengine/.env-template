# Django Secret Key
SECRET_KEY=your-secret-key-here

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email-here
EMAIL_HOST_PASSWORD=your-email-password-here
DEFAULT_FROM_EMAIL=your-email-here

# Template IDs for emails (password reset, invoices)
PASSWORD_RESET_MAIL_TEMPLATE_ID=your-password-reset-template-id-here
INVOICE_MAIL_TEMPLATE_ID=your-invoice-template-id-here
SUPPORT_EMAIL=support-email-here

# Frontend URL (e.g., for redirects)
FRONTEND_URL=https://your-frontend-url-here

# Google API (OAuth) Credentials
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Google reCAPTCHA Configuration
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key-here
RECAPTCHA_VERIFICATION_URL=https://www.google.com/recaptcha/api/siteverify

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key-here
STRIPE_SECRET_KEY=your-stripe-secret-key-here
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret-here

# After Payment Redirect URL
AFTER_PAYMENT_REDIRECT_URL=https://your-redirect-url-here

# Database Configuration (PostgreSQL)
DATABASE_URL=postgres://user:password@host:port/dbname

# Django Allowed Hosts (comma-separated)
ALLOWED_HOSTS='your-allowed-hosts-here'
